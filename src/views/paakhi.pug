doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title पाखी
    link(rel='stylesheet' href='./dist/css/main.css')
    script(defer='' src='https://use.fontawesome.com/releases/v5.0.6/js/all.js')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' type='text/css' media='screen' href='main.css')
    script(src='main.js')
    // Fonts
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Dekko|Righteous")

  body
    section.hero.is-dark.is-large#paakhi-main
      .hero-head
        header.navbar
          .container
            #navbarMenuHeroC.navbar-menu
              .navbar-end
                a.navbar-item(href='index.html')
                  | Other Events
      .hero-body
        .container.has-text-centered
          h1.is-size-1.paakhi-font पाखी
          h2.subtitle The Cultural festival of I.T. Gopeshwar

    section.hero.is-dark.is-medium
      .hero-body
        .container.has-text-centered
          h1.is-size-1.paakhi-font About पाखी

    section.hero.is-light.is-medium#pakhi-events-section
      mixin event(name, description)
        .column
          .card
            header.card-header.accordion-full
              p.card-header-title=name
              a.card-header-icon(aria-label="more-options")
                span.icon
                  i(class="fas fa-angle-down" aria-hidden="true")
            .card-content(style="padding: 2rem;")
              .content
                .columns
                  .column
                    p
                      strong Description
                    p=description

      .container.has-text-centered
        h1.is-size-1.paakhi-font Events
        .columns(style="margin:1rem;")
          +event("Dancing", "lorem")
          +event("Dancing", "lorem")

  script(type="text/javascript" src="./dist/js/accordion.js")